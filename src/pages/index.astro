---
import { getCollection } from "astro:content";
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { sortMDByDate } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getCollection("post");
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

const careers: Array<{ title: string; desc: string; href: string }> = [
	{
		title: "Creatrip",
		desc: "Front-end Engineer & Front-end Part Leader.",
		href: "https://www.creatrip.com/en",
	},
	{
		title: "Casemark AI",
		desc: "Chrome extension consultant.",
		href: "https://www.casemark.ai/",
	},
	{
		title: "Slog-up",
		desc: "Front-end Engineer.",
		href: "https://slogup.com/",
	},
];
---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Hello Guys!</h1>
		<p class="mb-4">
			Hi, I'm Jonghak Seo, a developer. I'm usually based in Seoul, but I'm not limited to where I
			work.
		</p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<PostPreview post={p} />
					</li>
				))
			}
		</ul>
	</section>
	<section class="mt-16">
		<h2 class="title mb-4 text-xl">Careers</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				careers.map(({ href, title, desc }) => (
					<li>
						<a
							href={href}
							target="_blank"
							rel="noopener noreferrer"
							class="cactus-link inline-block"
						>
							{title}
						</a>
						:<p class="inline-block sm:mt-2">{desc}</p>
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
